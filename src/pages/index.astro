---
import Button from "../components/button.astro";
import Projects from "../components/home/projects.astro";
import Separator from "../components/home/separator.astro";
import Experiences from "../components/home/experiences.astro";
import Publications from "../components/home/publications.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="Cat">
  <div
    class="relative z-20 w-full max-w-4xl mx-auto mt-16 px-7 md:mt-24 lg:mt-32 xl:px-0"
  >
    <div class="flex flex-col items-center text-center">
      <div class="relative w-full max-w-2xl">
        <h1
          class="mb-5 text-4xl font-bold leading-tight md:text-4xl lg:text-6xl dark:text-white"
        >
          Hello, I'm Cat.
        </h1>
        <p class="mb-6 text-base text-neutral-600 dark:text-neutral-400">
          I'm a Computer Scientist.
          I focus on building intelligence.
        </p>
        <p class="mb-2 font-semibold text-neutral-800 dark:text-neutral-200">
          My interests are:
        </p>
        <ul
          class="py-2 space-y-[3px] text-sm list-none text-neutral-500 dark:text-neutral-400"
        >
          <li>Reinforcement Learning</li>
          <li>Deep Learning</li>
          <li>Mathematics</li>
          <li>Large-scale Software Engineering</li>
          <li>Distributed Systems</li>
          <li>and more...</li>
        </ul>
        <div class="mt-6">
          <Button text="Connect with me on LinkedIn" link="https://www.linkedin.com/in/catluong1602/" />
        </div>
      </div>
    </div>
  </div>

  <Separator text="My experiences" />
  <Experiences />
  <Separator text="Check out my projects" />
  <Projects />
  <Separator text="My publications" />
  <Publications />
</Layout>
